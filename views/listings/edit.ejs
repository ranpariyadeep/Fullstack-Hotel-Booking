<%layout('layouts/boilerplate')%>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit Your Listing</h3>
    <form
      action="/listings/<%= listing._id%>?_method=PUT"
      method="POST"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-lable">Title</label>
        <input
          name="listing[title]"
          id=""
          value="<%= listing.title%>"
          class="form-control"
          type="text"
          required
        />
        <div class="valid-feedback">Title Look Good!</div>
        <div class="invalid-feedback">Please enter Title!</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-lable">Description</label>
        <textarea name="listing[description]" class="form-control" required>
<%= listing.description%> </textarea
        >
        <div class="invalid-feedback">Please enter short description</div>
      </div>

      <div class="mb-3">
        Origanal Listing Image <br>
        <img src="<%= originalImageUrl%>" alt=""/>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input
          name="listing[image]"
          id=""
          
          type="file"
         
          class="form-control"
       
        />
       
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            id=""
            value="<%= listing.price%>"
            type="number"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Price shoud be valid!</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            name="listing[country]"
            id=""
            value="<%= listing.country%>"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Country Name shoud be valid!</div>
        </div>
      </div>


      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          id=""
          value="<%= listing.location%>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Location shoud be valid!</div>
      </div>


      <div class="mb-3">
        <label for="locationType" class="form-label">Location Type</label>
        <select
          name="listing[locationType]"
          id="locationType"
          class="form-control"
          required
        >
          <option value="mountain"       <%= listing.locationType === "mountain" ? "selected" : "" %>>Mountain</option>
    <option value="castles"        <%= listing.locationType === "castles" ? "selected" : "" %>>Castles</option>
    <option value="camping"        <%= listing.locationType === "camping" ? "selected" : "" %>>Camping</option>
    <option value="arctic"         <%= listing.locationType === "arctic" ? "selected" : "" %>>Arctic</option>
    <option value="beach"          <%= listing.locationType === "beach" ? "selected" : "" %>>Beach</option>
    <option value="farm"           <%= listing.locationType === "farm" ? "selected" : "" %>>Farm</option>
    <option value="city"           <%= listing.locationType === "iconicCity" ? "selected" : "" %>>Iconic City</option>
    <option value="village"        <%= listing.locationType === "village" ? "selected" : "" %>>Village</option>
    <option value="lake"           <%= listing.locationType === "lake" ? "selected" : "" %>>Lake</option>
    <option value="desert"         <%= listing.locationType === "desert" ? "selected" : "" %>>Desert</option>
    <option value="forest"         <%= listing.locationType === "forest" ? "selected" : "" %>>Forest</option>
    <option value="island"         <%= listing.locationType === "island" ? "selected" : "" %>>Island</option>
    <option value="riverside"      <%= listing.locationType === "riverside" ? "selected" : "" %>>River Side</option>
    <option value="countryside"    <%= listing.locationType === "countryside" ? "selected" : "" %>>Countryside</option>
    <option value="snow"           <%= listing.locationType === "snow" ? "selected" : "" %>>Snow / Ski Area</option>
    <option value="coastal"        <%= listing.locationType === "coastal" ? "selected" : "" %>>Coastal</option>
  
        </select>
        <div class="invalid-feedback">Location Type shoud be valid!</div>
      </div>

      <br />
      <button class="btn btn-dark edit-btn mt-3">Submit</button>
    </form>
  </div>
</div>
