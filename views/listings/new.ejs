<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <div class= "col-8 offset-2">
       <br><br>
    <h3>Create a New Listing</h3>
    <form action="/listings" method="POST">
        <div class="mb-3">
            <label for="title" class="form-lable">Title</label>
            <input name="listing[title]" id="" placeholder="Add a catchy title" type="text" class="form-control">
        </div>

        <div class="mb-3">
            <label for="description" class="form-lable">Description</label>
            <textarea name="listing[description]" id="" placeholder="Enter Description" class="form-control"></textarea>

        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input name="listing[image]" id="" type="text" placeholder="Enter Image URL/LINK" class="form-control">

        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" id="" placeholder="Enter Price" type="number" class="form-control">

        </div>
      
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" id="" placeholder="Enter Country Name " type="text" class="form-control">

        </div>
    </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" id="" placeholder="Enter Location" type="text" class="form-control">

        </div>
<br>
        <button class="btn btn-dark add-btn mt-3">Add</button>
        <br><br>
    </form>
</div>
</div>